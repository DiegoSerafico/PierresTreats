@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<div class = "jumbotron">
  <h1>Flavors</h1>
</div>


@if (@Model.Count == 0)
{
  <h2>No Flavors have been added yet!</h2>
}
@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.Name}", "Details", new{ id = flavor.FlavorId})</p>
}

<p>@Html.ActionLink("Add a Flavor", "Create")</p>
<p>@Html.ActionLink("See all Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Profile", "Index", "Account")</p>